# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-api-key-here

# Model Configuration (recommended: gpt-4.1-mini for cost-effective quality)
GPT_MODEL=gpt-4.1-mini
GPT_TEMPERATURE=0.3
GPT_MAX_TOKENS=6000

# Alternative models (uncomment to use):
# GPT_MODEL=gpt-4-turbo-preview  # Higher quality, 20x more expensive
# GPT_MODEL=gpt-4.1              # If available (pricing TBD)
# GPT_MODEL=gpt-4o-mini          # Even cheaper, slightly lower quality

# Optional: Path Configuration (defaults are used if not set)
# CONFIG_DIR=config
# TEMPLATE_DIR=templates
# OUTPUT_ROOT=output

# Optional: Logging Configuration
# LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_DIR=logs

# Optional: Cache Configuration
# CACHE_ENABLED=true
# CACHE_TTL_HOURS=24
# CACHE_DIR=.cache

# Optional: Performance Configuration
# PARALLEL_PROCESSING=true
# MAX_CONCURRENT_REQUESTS=5
# REQUEST_TIMEOUT_SECONDS=60

# Optional: Clear cached outputs (PowerShell)
Remove-Item -Recurse -Force "outline-generator\output\.cache" -ErrorAction SilentlyContinue

