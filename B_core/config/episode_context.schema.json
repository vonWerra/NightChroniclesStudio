{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Episode Context Schema",
  "type": "object",
  "required": [
    "series_title",
    "episodes_total",
    "episode_number",
    "episode_title",
    "episode_description",
    "viewer_takeaway",
    "sources",
    "confidence_note",
    "segments"
  ],
  "properties": {
    "series_title": { "type": "string" },
    "episodes_total": { "type": "integer", "minimum": 1 },
    "episode_number": { "type": "integer", "minimum": 1 },
    "episode_title": { "type": "string" },
    "episode_description": { "type": "string" },
    "viewer_takeaway": { "type": "string" },
    "sources": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "confidence_note": { "type": "string" },
    "segments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["segment_index", "msp_label", "minutes_target", "word_target", "sources_segment"],
        "properties": {
          "segment_index": { "type": "integer", "minimum": 1 },
          "msp_label": { "type": "string" },
          "minutes_target": { "type": "integer", "minimum": 1 },
          "word_target": { "type": "integer", "minimum": 1 },
          "sources_segment": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1
          }
        }
      }
    }
  }
}
